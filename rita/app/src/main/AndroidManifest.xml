<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tb.rita">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".delivery.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Help Activity -->
        <activity
            android:name=".delivery.HelpActivity"
            android:label="Help"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:parentActivityName=".delivery.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".delivery.MainActivity" />
        </activity>

        <activity android:name=".delivery.CalibrationActivity" />
        <activity
            android:name=".delivery.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".delivery.CommandsActivity"></activity>

    </application>

</manifest>