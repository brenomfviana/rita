<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cmdDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/welcome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputIcon" />

    <ImageView
        android:id="@+id/inputIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rita_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/aliaseIcon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:rotation="90"
        app:srcCompat="@drawable/rita_icon"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cmdDescription"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="24dp" />

    <TextView
        android:id="@+id/aliase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="@string/apelidos"
        app:layout_constraintBottom_toBottomOf="@+id/aliaseIcon"
        app:layout_constraintLeft_toRightOf="@+id/aliaseIcon"
        app:layout_constraintTop_toTopOf="@+id/aliaseIcon"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="4dp" />

    <ExpandableListView
        android:id="@+id/aliases"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cmdDescription" />
</android.support.constraint.ConstraintLayout>